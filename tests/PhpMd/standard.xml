<?xml version="1.0"?>
<ruleset name="Standard PHPMD rule set for OXID Heartbeat"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Standard PHPMD Ruleset for OXID Heartbeat Module
    </description>

    <rule ref="rulesets/cleancode.xml/StaticAccess">
        <properties>
            <property name="exceptions">
                <value>
                    \OxidEsales\EshopCommunity\Internal\Container\ContainerFactory,
                    \OxidEsales\EshopCommunity\Core\Di\ContainerFacade,
                    \OxidEsales\Eshop\Core\Registry,
                    \OxidEsales\Eshop\Core\ShopVersion,
                    \OxidSupport\Heartbeat\Component\RequestLogger\Infrastructure\Logger\SymbolTracker,
                    \OxidSupport\Heartbeat\Component\DiagnosticsProvider\DataType\DiagnosticsType,
                    \OxidSupport\Heartbeat\Component\DiagnosticsProvider\DataType\DiagnosticsSectionType,
                    \OxidSupport\Heartbeat\Component\LogSender\DataType\LogSourceType,
                    \OxidSupport\Heartbeat\Component\LogSender\DataType\LogPathType
                </value>
            </property>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyPublicMethods" />
        <exclude name="CyclomaticComplexity" />
        <exclude name="NPathComplexity" />
    </rule>
    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="15" />
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="15" />
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="2000" />
        </properties>
    </rule>
    <rule ref="rulesets/design.xml" />

    <rule ref="rulesets/naming.xml">
        <exclude name="ShortVariable" />
        <exclude name="LongVariable" />
        <exclude name="LongClassName" />
    </rule>
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="exceptions" value="id,a,b,f,k,v,s,e" />
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum" value="35" />
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/LongClassName">
        <properties>
            <property name="maximum" value="50" />
        </properties>
    </rule>

    <rule ref="rulesets/unusedcode.xml" />
</ruleset>
